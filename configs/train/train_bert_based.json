{
    "dataset": {
        "file": "./datasets/cnndm/test.tsv"
    },

    "representation": {
        "max_len_sent_doc": 30,
        "max_sents_doc": 15,
        "max_len_sent_summ": 30,
        "max_sents_summ": 5,
        "sent_split": "<s>"
    },

    "huggingface": {
        "model_name": "TFBertModel",
        "tokenizer": "BertTokenizerFast",
        "shortcut_weights": "bert-base-cased"
    },

    "loss_params": {
        "gamma": 0.2,
        "alpha": 0.5
    },

    "model": {
        "att_layer": "TopkSingleSelfAttention",
        "att_params": {
            "n_hidden": 0,
            "dims": null,
            "topk": 3,
            "dropout": 0.1,
            "init_range": 0.02
        }
    },

    "optimization": {
        "loss": "triplet_loss_eucl",
        "margin": 1.0,
        "optimizer": "adam",
        "noam_annealing": true,
        "warmup_steps": 10000,
        "grad_accum_iters": 32,
        "metrics": ["eucl_dist_pos", "eucl_dist_neg"]
    },

    "training_params": {
        "batch_size": 8,
        "epochs": 30,
        "path_save_weights": "./weights/cnndm/",
        "verbose": 1
    }

}

