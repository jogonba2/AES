{
    "dataset": {
        "file": "./datasets/cnndm/samples.csv"
    },

    "representation": {
        "max_len_sent": 20,
        "max_sents": 30
    },

    "huggingface": {
        "model_name": "TFBertModel",
        "tokenizer": "BertTokenizer",
        "shortcut_weights": "bert-base-cased"
    },

    "loss_params": {
        "gamma": 0.2,
        "alpha": 0.5
    },

    "optimization": {
        "optimizer": "adam",
        "noam_annealing": true,
        "warmup_steps": 10000,
        "grad_accum_iters": 32
    },

    "training_params": {
        "batch_size": 32,
        "epochs": 30,
        "path_save_weights": "./weights/cnndm/",
        "verbose": 1
    }

}

